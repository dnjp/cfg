# xrandr --output "${INT}" --auto --pos ${off_w}x${ext_h} --scale 1x1  --output "${EXT}" --auto --scale 2x2 --pos 0x0


xrandr \
 --dpi 228 \
 --output eDP-1 --mode 2560x1600 --rate 60 --pos 0x0 \
 --output VGA-1 --off \
 --output HDMI-1 --mode 1920x1080 --rate 60 --pos 2560x0 --primary --left-of eDP-1 \
 --output DP-1 --off \
 --output HDMI-2 --off \
 --output DP-2 --off

echo "Xft.dpi: 114" | xrdb -merge
