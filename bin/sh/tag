#!/bin/sh

. $HOME/bin/sh/lib/acme.sh

setsel
in=$(readsel)

old="$PWD"
new=

while [ ! -f tags ] && [ "$PWD" != "/" ]; do
	cd ..
done
if [ ! -f tags ]; then
	exit
fi
new="$PWD"


readtags -e -t tags $in | \
	awk -F "\t" -v prefix="${new#$old}" \
		'{$2 = prefix"/"$2; print $2":"$3}' | \
while read i; do
    echo $i | \
	sed 's/(/\\(/g'  | \
	sed 's/)/\\)/g'  | \
	sed 's/\*/\\*/g' | \
	sed 's/\$//g'    | \
	sed 's/\/;"//g'
done 
