"""""""""""""""""""""""""""""""""""""""""""""""""""
" git search for word under cursor
map g/ wb"zye::o:!git grep "zp
map gs :!git status >/tmp/statout:sp:e /tmp/statout
map ga :!git add 
map gA :!git add -A
map gc :!git commit -a 
map gC :!git checkout -b 
map gP :!git push
map gp :!git pull
map gb :sp"zy1G:edit /tmp/blamefile"zp:.,$!wc -l"zyy:.,$!git blame -- #:o"zpI:
map gB :!git checkout 
map gl :!git log
