# Install

ln -s ./services ~/.config/systemd/user

systemctl --user start checkmail.timer

pip install afew

mkdir /home/daniel/.msmtpqueue

echo posteopass > ~/.mail/secrets/posteo
echo gmailpass > ~/.mail/secrets/gmail
echo martinpass > ~/.mail/secrets/martin
gpg --full-generate-key
gpg -r dnjp@posteo.org -e $home/mail/secrets/posteo
gpg -r dnjp@posteo.org -e $home/mail/secrets/gmail
gpg -r dnjp@posteo.org -e $home/mail/secrets/martin
