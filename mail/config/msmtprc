# Set default values for all following accounts.
logfile /home/daniel/mail/msmtp.log


defaults
auth on
tls on
tls_starttls off

account posteo
host posteo.de
from danieljamespost@posteo.net
user danieljamespost@posteo.net
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mail/secrets/posteo.gpg"
port 465

account dnjp : posteo
from dnjp@posteo.org

account personal
host smtp.gmail.com
from danieljamespost@gmail.com
user danieljamespost@gmail.com
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mail/secrets/gmail.gpg"
port 465

account work
host smtp.gmail.com
from daniel@martin.ai
user daniel@martin.ai
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mail/secrets/martin.gpg"
port 465
