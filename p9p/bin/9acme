#!/bin/env bash 

. $HOME/.profile

envvars() {
	export tabstop=8
	export INSIDE_ACME=true
	export PAGER=nobs
	export MANPAGER=nobs
}

setupshell() {
	acmeshell=$PLAN9/bin/rc
	# . $HOME/.profile
}

setupplumber() {
	cat $home/9/plumbing | 9p write plumb/rules
	9 plumber
}

setupfonts() {
	fontsrv &
	# font=/mnt/font/MesloLGS-Regular/9a/font
	font=$PLAN9/font/lucsans/unicode.8.font
}

startedwood() {
	exec edwood -a -f $font
}

startacme() {
	exec acme -a -f $lfont 
}

envvars
setupshell
# setupplumber
setupfonts

# startacme
startedwood

