#!/usr/local/plan9/bin/rc

curfile=$1
pattern=$2

input=`{ f $pattern | awk '{print $1}' }
files=`{ echo $input | sed 's/:[0-9]*//g' }
num=`{ echo $input | sed 's/\:/ : /g' | awk '{print $3}' }
switch ($#files) {
	case 0
		echo ':'
	case 1
		switch($files){
		case ./$curfile
			echo ':'^$num
		case *.*
			echo 'E +:'^$num^' '^$files
		case *
			echo ':'
		}
	case *
		f $pattern >> /tmp/bfiles
		echo E /tmp/bfiles
}
