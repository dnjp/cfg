gcloudconfig() {
	gcloud config configurations activate $1
	gcloud info | grep Project
}

proj() {
	gcloud config configurations activate $1
	gcloud info | grep Project
}

kgetnew() {

	pattern=$1

	watch "echo new: $(kubectl get po | grep $pattern | grep ' [0-9]m' | wc -l) total: $(kubectl get po | grep $pattern | wc -l)"
}

if [ "$INSIDE_ACME" ]; then

	# handle man pages more cleanly
	export PAGER=nobs
	export MANPAGER=nobs

	# Patch cd command for acme
	_cd () {
		\cd "$@" && awd
	}
	alias cd=_cd
fi

